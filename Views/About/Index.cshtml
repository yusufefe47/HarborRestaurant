@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model HarborRestaurant.Entities.Concrete.About

@{
    ViewData["Title"] = Localizer["About.Title"];
    var isEnglish = ViewBag.IsEnglish as bool? ?? false;
}

<!-- Hero Section -->
<div class="hero-wrap" style="background-image: url('/images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="@Url.Action("Index", "Home")">@Localizer["Nav.Home"]</a></span> <span>@Localizer["About.Breadcrumb"]</span></p>
                    <h1 class="mb-4 bread">@Localizer["About.HarborlightsAbout"]</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Services Section -->
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">@Localizer["About.Welcome"]</span>
                <h2 class="mb-4">@Localizer["About.DontWantToLeave"]</h2>
            </div>
        </div>
        <div class="row d-flex">
            <div class="col-md pr-md-1 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services py-4 d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-reception-bell"></span>
                        </div>
                    </div>
                    <div class="media-body">
                        <h3 class="heading mb-3">@Localizer["About.FriendlyService"]</h3>
                    </div>
                </div>
            </div>
            <div class="col-md px-md-1 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services active py-4 d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-serving-dish"></span>
                        </div>
                    </div>
                    <div class="media-body">
                        <h3 class="heading mb-3">@Localizer["About.BreakfastService"]</h3>
                    </div>
                </div>
            </div>
            <div class="col-md px-md-1 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services py-4 d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-car"></span>
                        </div>
                    </div>
                    <div class="media-body">
                        <h3 class="heading mb-3">@Localizer["About.TransferServices"]</h3>
                    </div>
                </div>
            </div>
            <div class="col-md px-md-1 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services py-4 d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="flaticon-spa"></span>
                        </div>
                    </div>
                    <div class="media-body">
                        <h3 class="heading mb-3">@Localizer["About.SuiteSpa"]</h3>
                    </div>
                </div>
            </div>
            <div class="col-md pl-md-1 d-flex align-self-stretch ftco-animate">
                <div class="media block-6 services py-4 d-block text-center">
                    <div class="d-flex justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="ion-ios-bed"></span>
                        </div>
                    </div>
                    <div class="media-body">
                        <h3 class="heading mb-3">@Localizer["About.ComfortableRooms"]</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section with Images -->
<section class="ftco-section ftco-wrap-about ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-7 order-md-last d-flex">
                <div class="img img-1 mr-md-2 ftco-animate" style="background-image: url('/images/about-1.jpg');"></div>
                <div class="img img-2 ml-md-2 ftco-animate" style="background-image: url('/images/about-2.jpg');"></div>
            </div>
            <div class="col-md-5 wrap-about pb-md-3 ftco-animate pr-md-5 pb-md-5 pt-md-4">
                <div class="heading-section mb-4 my-5 my-md-0">
                    @if (Model != null && !string.IsNullOrEmpty(Model.Subtitle))
                    {
                        @if (System.Globalization.CultureInfo.CurrentCulture.Name == "en" && !string.IsNullOrEmpty(Model.SubtitleEn))
                        {
                            <span class="subheading">@Model.SubtitleEn</span>
                        }
                        else
                        {
                            <span class="subheading">@Model.Subtitle</span>
                        }
                    }
                    else
                    {
                        <span class="subheading">@Localizer["About.HarborlightsAbout"]</span>
                    }
                    
                    @if (Model != null && !string.IsNullOrEmpty(Model.Title))
                    {
                        @if (isEnglish && !string.IsNullOrEmpty(Model.TitleEn))
                        {
                            <h2 class="mb-4">@Model.TitleEn</h2>
                        }
                        else
                        {
                            <h2 class="mb-4">@Model.Title</h2>
                        }
                    }
                    else
                    {
                        <h2 class="mb-4">@Localizer["About.RecommendedRestaurant"]</h2>
                    }
                </div>
                
                @if (Model != null && !string.IsNullOrEmpty(Model.Description))
                {
                    @if (isEnglish && !string.IsNullOrEmpty(Model.DescriptionEn))
                    {
                        @Html.Raw(Model.DescriptionEn.Replace("\n", "<br>"))
                    }
                    else
                    {
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    }
                }
                else
                {
                    <p>@Localizer["About.DefaultDescription"]</p>
                }
                <p><a href="@Url.Action("Index", "Reservation")" class="btn btn-secondary rounded">@Localizer["About.ReserveNow"]</a></p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonial Section -->
<section class="testimony-section">
    <div class="container">
        <div class="row no-gutters ftco-animate justify-content-center">
            <div class="col-md-5 d-flex">
                <div class="testimony-img aside-stretch-2" style="background-image: url('/images/testimony-img.jpg');"></div>
            </div>
            <div class="col-md-7 py-5 pl-md-5">
                <div class="py-md-5">
                    <div class="heading-section ftco-animate mb-4">
                        <span class="subheading">@Localizer["About.CustomerReviews"]</span>
                        <h2 class="mb-0">@Localizer["About.HappyCustomers"]</h2>
                    </div>
                    <div class="carousel-testimony owl-carousel ftco-animate">
                        <div class="item">
                            <div class="testimony-wrap pb-4">
                                <div class="text">
                                    <p class="mb-4">@Localizer["About.TestimonialText"]</p>
                                </div>
                                <div class="d-flex">
                                    <div class="user-img" style="background-image: url('/images/person_1.jpg')">
                                    </div>
                                    <div class="pos ml-3">
                                        <p class="name">@Localizer["About.TestimonialName1"]</p>
                                        <span class="position">@Localizer["About.TestimonialTitle1"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="testimony-wrap pb-4">
                                <div class="text">
                                    <p class="mb-4">@Localizer["About.TestimonialText"]</p>
                                </div>
                                <div class="d-flex">
                                    <div class="user-img" style="background-image: url('/images/person_2.jpg')">
                                    </div>
                                    <div class="pos ml-3">
                                        <p class="name">@Localizer["About.TestimonialName2"]</p>
                                        <span class="position">@Localizer["About.TestimonialTitle2"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="testimony-wrap pb-4">
                                <div class="text">
                                    <p class="mb-4">@Localizer["About.TestimonialText"]</p>
                                </div>
                                <div class="d-flex">
                                    <div class="user-img" style="background-image: url('/images/person_3.jpg')">
                                    </div>
                                    <div class="pos ml-3">
                                        <p class="name">@Localizer["About.TestimonialName3"]</p>
                                        <span class="position">@Localizer["About.TestimonialTitle3"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <div class="testimony-wrap pb-4">
                                <div class="text">
                                    <p class="mb-4">@Localizer["About.TestimonialText"]</p>
                                </div>
                                <div class="d-flex">
                                    <div class="user-img" style="background-image: url('/images/person_4.jpg')">
                                    </div>
                                    <div class="pos ml-3">
                                        <p class="name">@Localizer["About.TestimonialName4"]</p>
                                        <span class="position">@Localizer["About.TestimonialTitle4"]</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

