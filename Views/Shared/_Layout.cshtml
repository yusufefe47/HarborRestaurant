@using Microsoft.Extensions.Localization
@inject IStringLocalizer<HarborRestaurant.SharedResource> Localizer
<!DOCTYPE html>
<html lang="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName)">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["Brand"]</title>
    
    <!-- Performance: DNS Prefetch -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    <link rel="dns-prefetch" href="//ajax.googleapis.com">
    
    <!-- Performance: Preload Critical Resources -->
    <link rel="preload" href="~/css/style.css" as="style">
    <link rel="preload" href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700&display=swap" as="style">
    
    <!-- Critical CSS Inline for Speed -->
    <style>
        .hl-lights { color: #FFF700 !important; }
        body{font-family:"Nunito Sans",Arial,sans-serif;font-weight:400;font-size:16px;line-height:1.8;color:rgba(255,255,255,.8)}
        .navbar{padding:15px 0;background:transparent!important;transition:.3s all ease}
        .hero-wrap{background-size:cover;background-repeat:no-repeat;background-position:center center;height:100vh;position:relative}
    </style>

    <!-- CSS dosyalarını normal yükle - async yükleme sorun yaratıyor -->
    <link rel="stylesheet" href="~/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/css/flaticon.css">
    <link rel="stylesheet" href="~/css/icomoon.css">
    
    <!-- Main CSS -->
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:200,300,400,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">@Localizer["Brand"].Value.Split("lights")[0]<span class="hl-lights">lights</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a href="@Url.Action("Index", "Home")" class="nav-link">@Localizer["Nav.Home"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Rooms")" class="nav-link">@Localizer["Nav.Rooms"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Menu")" class="nav-link">@Localizer["Nav.Menu"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Reservation")" class="nav-link">@Localizer["Nav.Reservation"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "About")" class="nav-link">@Localizer["Nav.About"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Blog")" class="nav-link">@Localizer["Nav.Blog"]</a></li>
                    <li class="nav-item"><a href="@Url.Action("Index", "Contact")" class="nav-link">@Localizer["Nav.Contact"]</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                            <i class="ion-ios-globe"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="langDropdown">
                            <form method="post" asp-action="Set" asp-controller="Language" class="px-3 py-1">
                                <input type="hidden" name="culture" value="tr" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="dropdown-item">@Localizer["Lang.TR"]</button>
                            </form>
                            <form method="post" asp-action="Set" asp-controller="Language" class="px-3 py-1">
                                <input type="hidden" name="culture" value="en" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="dropdown-item">@Localizer["Lang.EN"]</button>
                            </form>
                        </div>
                    </li>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                                <i class="ion-ios-person"></i> @(User.Identity?.Name ?? "Kullanıcı")
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/Dashboard">
                                    <i class="ion-ios-speedometer"></i> Admin Panel
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout", "Account")">
                                    <i class="ion-ios-log-out"></i> @Localizer["Nav.Logout"]
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Account")" class="nav-link">
                                <i class="ion-ios-log-in"></i> @Localizer["Nav.Login"]
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- END nav -->

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Harbor<span class="hl-lights">lights</span></h2>
                        <p>@Localizer["Footer.Description"]</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">@Localizer["Footer.QuickMenu"]</h2>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Index", "Menu")" class="py-2 d-block">@Localizer["Nav.Menu"]</a></li>
                            <li><a href="@Url.Action("Index", "Reservation")" class="py-2 d-block">@Localizer["Nav.Reservation"]</a></li>
                            <li><a href="@Url.Action("Index", "About")" class="py-2 d-block">@Localizer["Nav.About"]</a></li>
                            <li><a href="@Url.Action("Index", "Contact")" class="py-2 d-block">@Localizer["Nav.Contact"]</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">@Localizer["Footer.UserActions"]</h2>
                        <ul class="list-unstyled">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li><a href="/Admin/Dashboard" class="py-2 d-block">
                                    <i class="ion-ios-speedometer"></i> @Localizer["Footer.AdminPanel"]
                                </a></li>
                                <li><a href="@Url.Action("Logout", "Account")" class="py-2 d-block">
                                    <i class="ion-ios-log-out"></i> @Localizer["Nav.Logout"]
                                </a></li>
                            }
                            else
                            {
                                <li><a href="@Url.Action("Login", "Account")" class="py-2 d-block">
                                    <i class="ion-ios-log-in"></i> @Localizer["Nav.Login"]
                                </a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">@Localizer["Footer.ContactInfo"]</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@Localizer["Footer.Address"]</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@Localizer["Footer.Phone"]</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@Localizer["Footer.Email"]</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>
                        &copy; @DateTime.Now.Year Harbor<span class="hl-lights">lights</span>. @Localizer["Footer.Rights"]
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts - Normal yükleme (async sorun yaratıyor) -->
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.stellar.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.animateNumber.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/scrollax.min.js"></script>
    <script src="~/js/main.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
