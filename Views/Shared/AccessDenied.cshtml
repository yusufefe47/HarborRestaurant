@{
    ViewData["Title"] = "Erişim Engellendi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Erişim Engellendi
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-ban fa-5x text-danger"></i>
                    </div>
                    <h4 class="text-danger">Bu sayfaya erişim yetkiniz bulunmuyor</h4>
                    <p class="text-muted">
                        Bu işlemi gerçekleştirmek için gerekli yetkilere sahip değilsiniz. 
                        Eğer bu sayfaya erişmeniz gerektiğini düşünüyorsanız, lütfen sistem yöneticisi ile iletişime geçin.
                    </p>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home"></i> Ana Sayfaya Dön
                        </a>
                        <a href="javascript:history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Geri Dön
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>
                        Eğer bu bir hata olduğunu düşünüyorsanız, lütfen 
                        <a href="@Url.Action("Index", "Contact")">bizimle iletişime geçin</a>.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto redirect after 10 seconds
        setTimeout(function() {
            if (confirm('10 saniye sonra ana sayfaya yönlendirileceksiniz. Şimdi yönlendirilmek istiyor musunuz?')) {
                window.location.href = '@Url.Action("Index", "Home")';
            }
        }, 10000);
    </script>
}
