@using Microsoft.Extensions.Localization
@inject IStringLocalizer<HarborRestaurant.SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Nav.Home"];
}

@{
    var home = ViewBag.HomePage as HarborRestaurant.Entities.Concrete.HomePage;
    var specialItems = ViewBag.SpecialItems as IEnumerable<HarborRestaurant.Entities.Concrete.MenuItem>;
    var rooms = ViewBag.Rooms as IEnumerable<HarborRestaurant.Entities.Concrete.Room>;
    var posts = ViewBag.RecentPosts as IEnumerable<HarborRestaurant.Entities.Concrete.BlogPost>;
    var isEnglish = ViewBag.IsEnglish as bool? ?? false;
}

<!-- Hero Section with Slider -->
<div class="hero">
    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image:url('@(home?.HeroImageUrl ?? "/images/bg_1.jpg")');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-end">
                    <div class="col-md-6 ftco-animate">
                        <div class="text">
                            <h2>@(isEnglish && !string.IsNullOrEmpty(home?.SubtitleEn) ? home.SubtitleEn : (home?.Subtitle ?? Localizer["Home.Hero.Subtitle"]))</h2>
                            <h1 class="mb-3">@(isEnglish && !string.IsNullOrEmpty(home?.MainTitleEn) ? home.MainTitleEn : (home?.MainTitle ?? Localizer["Home.Hero.Title"]))</h1>
                            <p class="mb-4">@(isEnglish && !string.IsNullOrEmpty(home?.DescriptionEn) ? home.DescriptionEn : (home?.Description ?? Localizer["CompanyExperience"]))</p>
                            <p>
                                <a href="@(home?.ButtonUrl ?? Url.Action("Index", "Reservation"))" class="btn btn-primary px-4 py-3">@(isEnglish && !string.IsNullOrEmpty(home?.ButtonTextEn) ? home.ButtonTextEn : (home?.ButtonText ?? Localizer["MakeReservation"]))</a>
                                <a href="@Url.Action("Index", "Menu")" class="btn btn-white btn-outline-white px-4 py-3">@Localizer["ViewMenu"]</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="slider-item" style="background-image:url('/images/bg_2.jpg');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-end">
                    <div class="col-md-6 ftco-animate">
                        <div class="text">
                            <h2>Harborlights</h2>
                            <h1 class="mb-3">@Localizer["Home.Hero.Service"]</h1>
                            <p class="mb-4">@(isEnglish && !string.IsNullOrEmpty(home?.DescriptionEn) ? home.DescriptionEn : (home?.Description ?? Localizer["CompanyExperience"]))</p>
                            <p><a href="@Url.Action("Index", "About")" class="btn btn-primary px-4 py-3">@Localizer["Nav.About"]</a> <a href="@Url.Action("Index", "Contact")" class="btn btn-white btn-outline-white px-4 py-3">@Localizer["Nav.Contact"]</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Booking Form Section -->
<section class="ftco-booking ftco-section ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-12">
                
                <!-- Mesaj Alanları -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form action="@Url.Action("Index", "Rooms")" method="get" class="booking-form aside-stretch">
                    <div class="row">
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label for="#">@Localizer["Home.BookingForm.CheckIn"]</label>
                                    <input type="date" class="form-control" name="CheckInDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label for="#">@Localizer["Home.BookingForm.CheckOut"]</label>
                                    <input type="date" class="form-control" name="CheckOutDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label for="#">@Localizer["Home.BookingForm.Time"]</label>
                                    <input type="time" class="form-control" name="ReservationTime" value="19:00">
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex py-md-4">
                            <div class="form-group align-self-stretch d-flex align-items-end">
                                <div class="wrap align-self-stretch py-3 px-4">
                                    <label for="#">@Localizer["Home.BookingForm.Guests"]</label>
                                    <div class="form-field">
                                        <div class="select-wrap">
                                            <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                            <select name="GuestCount" class="form-control" required>
                                                <option value="">@Localizer["Common.Select"]</option>
                                                <option value="1">1 @Localizer["Common.Person"]</option>
                                                <option value="2" selected>2 @Localizer["Common.Person"]</option>
                                                <option value="3">3 @Localizer["Common.Person"]</option>
                                                <option value="4">4 @Localizer["Common.Person"]</option>
                                                <option value="5">5+ @Localizer["Common.Person"]</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex">
                            <div class="form-group d-flex align-self-stretch">
                                <input type="submit" value="@Localizer["Home.BookingForm.FindRooms"]" class="btn btn-primary py-5 px-4">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

