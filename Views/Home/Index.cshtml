<!-- About Section -->
<section class="ftco-section ftco-wrap-about ftco-no-pt ftco-no-pb">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-7 order-md-last d-flex">
                <div class="img img-1 mr-md-2 ftco-animate" style="background-image: url('/images/about-1.jpg');"></div>
                <div class="img img-2 ml-md-2 ftco-animate" style="background-image: url('/images/about-2.jpg');"></div>
            </div>
            <div class="col-md-5 wrap-about pb-md-3 ftco-animate pr-md-5 pb-md-5 pt-md-4">
                <div class="heading-section mb-4 my-5 my-md-0">
                    <span class="subheading">@Localizer["About.Harborlights"]</span>
                    <h2 class="mb-4">@Localizer["About.MainTitle"]</h2>
                </div>
                <p>@Localizer["About.Description"]</p>
                <p>@Localizer["ChefExperience"]</p>
                <p><a href="@Url.Action("Index", "Reservation")" class="btn btn-secondary rounded">@Localizer["BookYourTable"]</a></p>
            </div>
        </div>
    </div>
</section>

<!-- Rooms Section -->
<section class="ftco-section ftco-no-pb ftco-room">
    <div class="container-fluid px-0">
        <div class="row no-gutters justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">@Localizer["Home.Rooms.Title"]</span>
                <h2 class="mb-4">@Localizer["Home.Rooms.Subtitle"]</h2>
            </div>
        </div>
        <div class="row no-gutters">
            @if (rooms != null && rooms.Any())
            {
                foreach (var room in rooms)
                {
                    <div class="col-lg-6">
                        <div class="room-wrap d-md-flex ftco-animate">
                            <a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })" class="img" style="background-image: url('@(string.IsNullOrWhiteSpace(room.ImageUrl) ? "/images/room-1.jpg" : room.ImageUrl)');"></a>
                            <div class="half left-arrow d-flex align-items-center">
                                <div class="text p-4 text-center">
                                    <p class="star mb-0">
                                        @for (int i = 0; i < (room.StarRating > 0 ? room.StarRating : 5); i++)
                                        {
                                            <span class="ion-ios-star"></span>
                                        }
                                    </p>
                                    <p class="mb-0">
                                        @if (room.MinimumOrderAmount.HasValue)
                                        {
                                            <span class="price mr-1">₺@room.MinimumOrderAmount.Value.ToString("0")</span>
                                            <span class="per">@Localizer["Home.Rooms.MinOrder"]</span>
                                        }
                                    </p>
                                    <h3 class="mb-3"><a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })">@(isEnglish && !string.IsNullOrEmpty(room.NameEn) ? room.NameEn : room.Name)</a></h3>
                                    <p class="pt-1"><a href="@Url.Action("Index", "Reservation", new { RoomId = room.RoomId })" class="btn-custom px-3 py-2 rounded">@Localizer["Home.Rooms.BookThisRoom"] <span class="icon-long-arrow-right"></span></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted pb-5">@Localizer["Home.Rooms.NoRooms"]</div>
            }
        </div>
    </div>
</section>

<!-- Menu Section -->
<section class="ftco-section ftco-menu bg-light">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">@Localizer["Home.Menu.Restaurant"]</span>
                <h2>@Localizer["Home.Menu.RestaurantMenu"]</h2>
            </div>
        </div>
        <div class="row">
            @if (specialItems != null && specialItems.Any())
            {
                foreach (var item in specialItems)
                {
                    <div class="col-lg-6 col-xl-4 d-flex">
                        <div class="pricing-entry rounded d-flex ftco-animate">
                            <div class="img" style="background-image: url('@(string.IsNullOrWhiteSpace(item.ImageUrl) ? "/images/menu-1.jpg" : item.ImageUrl)');"></div>
                            <div class="desc p-4">
                                <div class="d-md-flex text align-items-start">
                                    <h3><span>@(isEnglish && !string.IsNullOrEmpty(item.NameEn) ? item.NameEn : item.Name)</span></h3>
                                    <span class="price">₺@item.Price.ToString("0.##")</span>
                                </div>
                                <div class="d-block">
                                    <p>@(isEnglish && !string.IsNullOrEmpty(item.DescriptionEn) ? item.DescriptionEn : (string.IsNullOrWhiteSpace(item.Description) ? item.Ingredients : item.Description))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted pb-4">@Localizer["Home.Menu.NoItems"]</div>
            }
        </div>
    </div>
</section>

<!-- Recent Blog Posts -->
@if (posts != null && posts.Any())
{
    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 pb-3">
                <div class="col-md-7 heading-section text-center ftco-animate">
                    <span class="subheading">@Localizer["Blog.Title"]</span>
                    <h2 class="mb-4">@Localizer["Home.Blog.RecentPosts"]</h2>
                </div>
            </div>
            <div class="row d-flex">
                @foreach (var p in posts)
                {
                    <div class="col-md-4 d-flex ftco-animate">
                        <div class="blog-entry align-self-stretch">
                            <a href="@Url.Action("Detail", "Blog", new { id = p.PostId })" class="block-20" style="background-image: url('@(string.IsNullOrWhiteSpace(p.ImageUrl) ? "/images/image_1.jpg" : p.ImageUrl)');">
                            </a>
                            <div class="text p-4 d-block">
                                <h3 class="heading mt-3"><a href="@Url.Action("Detail", "Blog", new { id = p.PostId })">@(isEnglish && !string.IsNullOrEmpty(p.TitleEn) ? p.TitleEn : p.Title)</a></h3>
                                @{
                                    var summary = isEnglish && !string.IsNullOrEmpty(p.SummaryEn) ? p.SummaryEn : p.Summary;
                                }
                                @if (!string.IsNullOrWhiteSpace(summary))
                                {
                                    <p>@summary</p>
                                }
                                <div class="meta mb-3">
                                    <div><span class="icon-person"></span> @(string.IsNullOrWhiteSpace(p.Author) ? "Admin" : p.Author)</div>
                                    <div><span class="icon-calendar"></span> @p.CreatedDate.ToString("dd.MM.yyyy")</div>
                                    <div><span class="icon-eye"></span> @p.ViewCount görüntüleme</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

