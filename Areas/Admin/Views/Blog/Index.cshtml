@model IEnumerable<HarborRestaurant.Entities.Concrete.BlogPost>
@{
    ViewData["Title"] = "Blog Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-blog me-2"></i>Blog Yönetimi
    </h1>
</div>

<!-- İstatistik Kartları -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Yazı</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalPosts</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Aktif Yazılar</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActivePosts</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Kategoriler</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalCategories</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tags fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Öne Çıkan</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.FeaturedPosts</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-star fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hızlı Eylemler -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-primary py-3">
                <h6 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-file-alt me-2"></i>Blog Yazıları
                </h6>
            </div>
            <div class="card-body">
                <p class="text-gray-600">Blog yazılarınızı yönetin, yeni yazı ekleyin veya mevcut yazıları düzenleyin.</p>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Posts", "Blog")" class="btn btn-primary">
                        <i class="fas fa-eye me-1"></i>Yazıları Görüntüle
                    </a>
                    <a href="@Url.Action("Create", "Blog")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Yeni Yazı
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-success py-3">
                <h6 class="m-0 font-weight-bold text-white">
                    <i class="fas fa-tags me-2"></i>Kategoriler
                </h6>
            </div>
            <div class="card-body">
                <p class="text-gray-600">Blog kategorilerini yönetin, yeni kategori ekleyin veya mevcut kategorileri düzenleyin.</p>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("Categories", "Blog")" class="btn btn-primary">
                        <i class="fas fa-eye me-1"></i>Kategorileri Görüntüle
                    </a>
                    <a href="@Url.Action("CreateCategory", "Blog")" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Yeni Kategori
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <!-- Son İletişimler -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header bg-info py-3">
                    <h6 class="m-0 font-weight-bold text-white">
                        <i class="fas fa-envelope me-2"></i>Son İletişimler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>Yazar</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model)
                                {
                                    <tr>
                                        <td>@(post.Title ?? "")</td>
                                        <td>
                                            @if (post.Category != null)
                                            {
                                                <span class="badge bg-primary">@(post.Category.Name ?? "")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Kategori yok</span>
                                            }
                                        </td>
                                        <td>@(post.Author ?? "")</td>
                                        <td>@post.CreatedDate.ToString("dd.MM.yyyy")</td>
                                        <td>
                                            @if (post.IsActive)
                                            {
                                                <span class="badge bg-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="@Url.Action("Details", new { id = post.PostId })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("Edit", new { id = post.PostId })" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
