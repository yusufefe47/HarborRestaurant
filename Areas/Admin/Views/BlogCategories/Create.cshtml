@model HarborRestaurant.Entities.Concrete.BlogCategory

@{
    ViewData["Title"] = "Yeni Blog Kategorisi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Yeni Blog Kategorisi</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "BlogCategories")">Blog Kategorileri</a></li>
                        <li class="breadcrumb-item active">Yeni Kategori</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-plus"></i> Kategori Bilgileri
                            </h3>
                        </div>
                        <form asp-action="Create" method="post">
                            <div class="card-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Kategori Adı *</label>
                                    <input asp-for="Name" class="form-control" placeholder="Kategori adını giriniz" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Açıklama</label>
                                    <textarea asp-for="Description" class="form-control" rows="3" 
                                              placeholder="Kategori açıklamasını giriniz (isteğe bağlı)"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="SortOrder" class="control-label">Sıra Numarası</label>
                                            <input asp-for="SortOrder" class="form-control" type="number" min="0" />
                                            <small class="form-text text-muted">Kategorilerin sıralanması için kullanılır</small>
                                            <span asp-validation-for="SortOrder" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox mt-4">
                                                <input asp-for="IsActive" class="custom-control-input" checked />
                                                <label asp-for="IsActive" class="custom-control-label">Aktif</label>
                                            </div>
                                            <small class="form-text text-muted">Kategorinin görünür olup olmayacağını belirler</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Kaydet
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Geri Dön
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">
                                <i class="fas fa-info-circle"></i> Bilgilendirme
                            </h3>
                        </div>
                        <div class="card-body">
                            <h5>Blog Kategorisi Oluşturma</h5>
                            <p class="text-muted">
                                Blog kategorileri, blog yazılarınızı düzenli bir şekilde gruplandırmanızı sağlar.
                            </p>
                            
                            <h6>Önemli Notlar:</h6>
                            <ul class="text-sm">
                                <li>Kategori adı zorunludur ve benzersiz olmalıdır</li>
                                <li>Açıklama alanı isteğe bağlıdır</li>
                                <li>Sıra numarası kategorilerin sıralanması için kullanılır</li>
                                <li>Pasif kategoriler kullanıcılara gösterilmez</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Real-time name validation
            $('#Name').on('blur', function() {
                var name = $(this).val();
                if (name) {
                    $.get('@Url.Action("CheckName")', { name: name }, function(data) {
                        if (!data) {
                            $('#Name').addClass('is-invalid');
                            if ($('#Name').next('.invalid-feedback').length === 0) {
                                $('#Name').after('<div class="invalid-feedback">Bu kategori adı zaten kullanılıyor</div>');
                            }
                        } else {
                            $('#Name').removeClass('is-invalid');
                            $('#Name').next('.invalid-feedback').remove();
                        }
                    });
                }
            });
        });
    </script>
}
