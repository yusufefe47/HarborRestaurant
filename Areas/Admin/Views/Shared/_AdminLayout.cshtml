<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Harborlights Admin</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HarborRestaurant.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    
    <style>
    .hl-lights { color: #FFF700 !important; }
        .main-header .navbar {
            border-bottom: 1px solid rgba(0,0,0,0.125);
        }
        .content-wrapper {
            background: #f4f6f9;
        }
        .main-sidebar {
            background: linear-gradient(180deg, #007bff 0%, #0056b3 100%);
        }
        .nav-sidebar .nav-link {
            color: rgba(255,255,255,0.9) !important;
        }
        .nav-sidebar .nav-link:hover {
            background: rgba(255,255,255,0.1);
            color: white !important;
        }
        .nav-sidebar .nav-link.active {
            background: rgba(255,255,255,0.2);
            color: white !important;
        }
        .brand-text {
            color: white !important;
            font-weight: bold;
        }
        .brand-link {
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .card {
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
            border: 0;
        }
        .btn-primary {
            background: linear-gradient(45deg, #007bff, #0056b3);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(45deg, #0056b3, #004085);
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link" target="_blank">
                        <i class="fas fa-external-link-alt"></i> Siteyi Görüntüle
                    </a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fas fa-user-circle"></i> Admin
                        <i class="fas fa-caret-down ml-1"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a href="#" class="dropdown-item">
                            <i class="fas fa-user mr-2"></i> Profil
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                            <button type="submit" class="btn btn-link dropdown-item">
                                <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                            </button>
                        </form>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Admin" class="brand-link">
                <i class="fas fa-anchor brand-image opacity-8"></i>
                <span class="brand-text font-weight-light">Harbor<span class="hl-lights">lights</span> Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a href="/Admin/Dashboard" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>

                        <!-- Sayfa Yönetimi -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-file-alt"></i>
                                <p>
                                    Sayfa Yönetimi
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/Pages/Home" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Anasayfa</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Pages/About" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Hakkımızda</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/Pages/Contact" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>İletişim</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Menü Yönetimi -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-utensils"></i>
                                <p>
                                    Menü Yönetimi
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/MenuCategories" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kategoriler</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/MenuItems" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Menü Öğeleri</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- Rezervasyon Yönetimi -->
                        <li class="nav-item">
                            <a href="/Admin/Reservations" class="nav-link">
                                <i class="nav-icon fas fa-calendar-check"></i>
                                <p>Rezervasyonlar</p>
                            </a>
                        </li>

                        <!-- Oda Yönetimi -->
                        <li class="nav-item">
                            <a href="/Admin/Rooms" class="nav-link">
                                <i class="nav-icon fas fa-bed"></i>
                                <p>Odalar</p>
                            </a>
                        </li>

                        <!-- Masa Yönetimi -->
                        <li class="nav-item">
                            <a href="/Admin/Tables" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>Masalar</p>
                            </a>
                        </li>

                        <!-- Blog Yönetimi -->
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-blog"></i>
                                <p>
                                    Blog Yönetimi
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/Admin/BlogCategories" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Kategoriler</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Admin/BlogPosts" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Blog Yazıları</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <!-- İletişim Mesajları -->
                        <li class="nav-item">
                            <a href="/Admin/ContactMessages" class="nav-link">
                                <i class="nav-icon fas fa-envelope"></i>
                                <p>İletişim Mesajları</p>
                            </a>
                        </li>

                        <!-- QR Kodlar -->
                        <li class="nav-item">
                            <a href="/Admin/QR/QRCodes" class="nav-link">
                                <i class="nav-icon fas fa-qrcode"></i>
                                <p>QR Kodlar</p>
                            </a>
                        </li>

                        <!-- Kullanıcı Yönetimi -->
                        <li class="nav-item">
                            <a href="/Admin/Users" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Kullanıcılar</p>
                            </a>
                        </li>

                        <!-- Sistem Ayarları -->
                        <li class="nav-item">
                            <a href="/Admin/Settings" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Sistem Ayarları</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Content Header -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewData["Title"]</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/Admin">Ana Sayfa</a></li>
                                @{
                                    var titleValue = ViewData["Title"]?.ToString();
                                }
                                @if (!string.IsNullOrEmpty(titleValue) && titleValue != "Dashboard")
                                {
                                    <li class="breadcrumb-item active">@titleValue</li>
                                }
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a href="#">Harbor<span class="hl-lights">lights</span></a>.</strong> Tüm hakları saklıdır.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
