@{
    ViewData["Title"] = "Sayfa Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-file-alt"></i> Sayfa Yönetimi</h2>
</div>

<div class="row">
    <!-- Ana Sayfa -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-home fa-3x text-primary"></i>
                </div>
                <h5 class="card-title">Ana Sayfa</h5>
                <p class="card-text">Sitenin ana sayfası içeriğini düzenleyin</p>
                <div class="d-grid">
                    <a href="@Url.Action("Home")" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Hakkımızda -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-info-circle fa-3x text-success"></i>
                </div>
                <h5 class="card-title">Hakkımızda</h5>
                <p class="card-text">Restoran bilgileri ve hikayesini düzenleyin</p>
                <div class="d-grid">
                    <a href="@Url.Action("About")" class="btn btn-success">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İletişim -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-phone fa-3x text-info"></i>
                </div>
                <h5 class="card-title">İletişim</h5>
                <p class="card-text">İletişim bilgilerini güncelleyin</p>
                <div class="d-grid">
                    <a href="@Url.Action("Contact")" class="btn btn-info">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Menü -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-utensils fa-3x text-warning"></i>
                </div>
                <h5 class="card-title">Menü</h5>
                <p class="card-text">Restoran menüsünü düzenleyin</p>
                <div class="d-grid">
                    <a href="@Url.Action("Index", "Menu")" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Blog -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-blog fa-3x text-secondary"></i>
                </div>
                <h5 class="card-title">Blog</h5>
                <p class="card-text">Blog yazıları ve haberlerinizi yönetin</p>
                <div class="d-grid">
                    <a href="@Url.Action("Index", "Blog")" class="btn btn-secondary">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Salonlar -->
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-home fa-3x text-danger"></i>
                </div>
                <h5 class="card-title">Salonlar</h5>
                <p class="card-text">Restoran salonları ve özel alanların yönetimi</p>
                <div class="d-grid">
                    <a href="@Url.Action("Index", "Rooms")" class="btn btn-danger">
                        <i class="fas fa-edit"></i> Yönet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hızlı İstatistikler -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar"></i> Sayfa İstatistikleri</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-primary">6</h3>
                            <p class="text-muted mb-0">Toplam Sayfa</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-success">5</h3>
                            <p class="text-muted mb-0">Aktif Sayfa</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-info">@DateTime.Now.ToString("dd.MM.yyyy")</h3>
                            <p class="text-muted mb-0">Son Güncelleme</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="p-3">
                            <h3 class="text-warning">%100</h3>
                            <p class="text-muted mb-0">Tamamlanma</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
