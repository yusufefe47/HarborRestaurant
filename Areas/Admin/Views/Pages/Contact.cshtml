@model HarborRestaurant.Entities.Concrete.Contact

@{
    ViewData["Title"] = "İletişim Bilgileri Düzenle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-phone"></i> İletişim Bilgileri</h2>
    <a href="@Url.Action("Index", "Pages")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.ContactId)
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label">Adres *</label>
                                <textarea asp-for="Address" class="form-control" rows="3" required placeholder="Tam adres bilgisi"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Telefon *</label>
                                <input asp-for="Phone" class="form-control" required placeholder="+90 212 555 01 23" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">E-posta *</label>
                                <input asp-for="Email" class="form-control" type="email" required placeholder="info@harborrestaurant.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Çalışma Saatleri</label>
                                <input asp-for="WorkingHours" class="form-control" placeholder="Pazartesi-Cumartesi: 10:00-22:00" />
                                <span asp-validation-for="WorkingHours" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Harita URL</label>
                                <input asp-for="MapUrl" class="form-control" placeholder="Google Maps linki" />
                                <span asp-validation-for="MapUrl" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Harita Enlem (Latitude)</label>
                                <input asp-for="MapLatitude" class="form-control" placeholder="41.0082" />
                                <span asp-validation-for="MapLatitude" class="text-danger"></span>
                                <small class="form-text text-muted">GPS koordinatları için</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Harita Boylam (Longitude)</label>
                                <input asp-for="MapLongitude" class="form-control" placeholder="28.9784" />
                                <span asp-validation-for="MapLongitude" class="text-danger"></span>
                                <small class="form-text text-muted">GPS koordinatları için</small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                Aktif
                            </label>
                        </div>
                        <small class="form-text text-muted">Bu iletişim bilgileri sitede görünür olsun mu?</small>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a href="@Url.Action("Index", "Pages")" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
