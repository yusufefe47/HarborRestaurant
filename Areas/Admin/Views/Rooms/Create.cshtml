@model HarborRestaurant.Entities.Concrete.Room
@{
    ViewData["Title"] = "Yeni Salon Ekle";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-plus me-2"></i>Yeni Salon Ekle
    </h1>
    <div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Geri Dön
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Salon Bilgileri</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Salon Adı</label>
                                <input asp-for="Name" class="form-control" placeholder="Salon adını girin" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Salon açıklamasını girin"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Features" class="form-label">Özellikler</label>
                                <textarea asp-for="Features" class="form-control" rows="3" placeholder="Salon özelliklerini virgül ile ayırarak girin"></textarea>
                                <span asp-validation-for="Features" class="text-danger"></span>
                                <small class="form-text text-muted">Örnek: Klima, Projeksiyon, Ses sistemi</small>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Capacity" class="form-label">Kapasite (Kişi)</label>
                                <input asp-for="Capacity" type="number" class="form-control" min="1" max="100" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="MinimumOrderAmount" class="form-label">Minimum Sipariş Tutarı (₺)</label>
                                <input asp-for="MinimumOrderAmount" type="number" step="0.01" class="form-control" min="0" />
                                <span asp-validation-for="MinimumOrderAmount" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Salon Görseli</label>
                                <input type="file" name="roomImage" class="form-control" accept="image/*" />
                                <small class="form-text text-muted">JPEG, PNG veya GIF formatında</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="StarRating" class="form-label">Yıldız Sayısı</label>
                                <select asp-for="StarRating" class="form-select">
                                    <option value="1">1 Yıldız</option>
                                    <option value="2">2 Yıldız</option>
                                    <option value="3">3 Yıldız</option>
                                    <option value="4">4 Yıldız</option>
                                    <option value="5" selected>5 Yıldız</option>
                                </select>
                                <span asp-validation-for="StarRating" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="SortOrder" class="form-label">Sıralama</label>
                                <input asp-for="SortOrder" type="number" class="form-control" min="0" value="1" />
                                <span asp-validation-for="SortOrder" class="text-danger"></span>
                                <small class="form-text text-muted">Küçük sayılar önce gösterilir</small>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label">
                                        Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Kaydet
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
